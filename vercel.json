{
  "buildCommand": "git lfs pull && npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "functions": {
    "src/pages/**/*.tsx": {
      "maxDuration": 30
    }
  },
  "images": {
    "domains": ["images.unsplash.com", "via.placeholder.com"],
    "sizes": [640, 750, 828, 1080, 1200, 1920, 2048, 3840],
    "formats": ["image/webp", "image/avif"]
  }
}
